{
  "name": "hackathon",
  "displayName": "Hackathon",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hackathon.scanCodeForDefects",
    "onCommand:hackathon.createJiraTicket",
    "onCommand:hackathon.runTestCoverageAnalysis",
    "onCommand:hackathon.viewOutstandingTickets",
    "onCommand:hackathon.lintChecks",
    "onCommand:hackathon.codeExplanation",
    "onCommand:hackathon.generateUnitTests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hackathon.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "hackathon.scanForDefects",
        "title": "Scan Code for Defects"
      },
      {
        "command": "hackathon.createJiraTicket",
        "title": "Create a Jira Ticket for Defect"
      },
      {
        "command": "hackathon.runTestCoverageAnalysis",
        "title": "Run Test Coverage Analysis"
      },
      {
        "command": "hackathon.viewOutstandingTickets",
        "title": "View Outstanding Tickets"
      },
      {
        "command": "hackathon.lintChecks",
        "title": "Conduct a Lint Check"
      },
      {
        "command": "hackathon.codeExplanation",
        "title": "Explain this code"
      },
      {
        "command": "hackathon.generateUnitTests",
        "title": "Generate unit tests"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "hackathon.scanForDefects",
          "when": "editorTextFocus"
        },
        {
          "command": "hackathon.createJiraTicket",
          "when": "editorTextFocus"
        },
        {
          "command": "hackathon.runTestCoverageAnalysis",
          "when": "editorTextFocus"
        },
        {
          "command": "hackathon.viewOutstandingTickets",
          "when": "editorTextFocus"
        },
        {
          "command": "hackathon.lintChecks",
          "when": "editorTextFocus"
        },
        {
          "command": "hackathon.codeExplanation",
          "when": "editorTextFocus"
        },
        {
          "command": "hackathon.generateUnitTests",
          "when": "editorTextFocus"
        }
      ]
    },
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src",
      "test": "vscode-test"
    },
    "devDependencies": {
      "@types/vscode": "^1.54.0",
      "@types/mocha": "^10.0.7",
      "@types/node": "20.x",
      "@typescript-eslint/eslint-plugin": "^8.3.0",
      "@typescript-eslint/parser": "^8.3.0",
      "eslint": "^9.9.1",
      "typescript": "^5.5.4",
      "@vscode/test-cli": "^0.0.10",
      "@vscode/test-electron": "^2.4.1"
    },
    "configuration": {
    "properties": {
      "jiraIntegration.baseUrl": {
        "type": "string",
        "default": "",
        "description": "https://anushachitranshi.atlassian.net/"
      },
      "jiraIntegration.apiToken": {
        "type": "string",
        "default": "",
        "description": "Your JIRA API token."
      }
    }
  }
  },
  "dependencies": {
    "axios": "^1.7.7",
    "console": "^0.7.2",
    "node-fetch": "^3.3.2",
    "vscode": "^1.1.34"
  }
}
